@{
    ViewData["Title"] = "Complete Profile";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f5f7fa;">
    <div class="card" style="width: 100%; max-width: 600px; border-radius: 20px; box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.1);">
        <div class="card-header text-center bg-light" style="border-radius: 20px 20px 0 0; background-color: #F8F9FA;">
            <img src="~/images/icone1.png" alt="Logo" style="height: 50px; margin-bottom: 10px;">
            <h2 class="fw-bold" style="color: #117554;">MyFitnessApp</h2>
            <p style="font-weight: 500; color: #888;">Complétez votre profil pour continuer</p>
        </div>
        <div class="card-body" style="padding: 40px;">
            <form method="post" enctype="multipart/form-data" action="/CompleteProfile/CompleteProfile">
                <input type="hidden" name="id" value="@ViewBag.UserId" />

                <!-- Poids actuel -->
                <div class="mb-4">
                    <label for="currentWeight" class="form-label" style="font-weight: 600; color: #333;">Poids actuel (kg) :</label>
                    <input type="number" step="0.1" class="form-control" id="currentWeight" name="currentWeight" required
                           style="font-size: 1.1rem; padding: 15px;" />
                </div>

                <!-- Poids cible -->
                <div class="mb-4">
                    <label for="goalWeight" class="form-label" style="font-weight: 600; color: #333;">Poids cible (kg) :</label>
                    <input type="number" step="0.1" class="form-control" id="goalWeight" name="goalWeight" required
                           style="font-size: 1.1rem; padding: 15px;" />
                </div>

                <!-- Objectif calories quotidiennes -->
                <div class="mb-4">
                    <label for="dailyCaloriesGoal" class="form-label" style="font-weight: 600; color: #333;">Objectif calories quotidiennes :</label>
                    <input type="number" step="1" class="form-control" id="dailyCaloriesGoal" name="dailyCaloriesGoal" required
                           style="font-size: 1.1rem; padding: 15px;" />
                </div>

                <!-- Genre -->
                <div class="mb-4">
                    <label for="gender" class="form-label" style="font-weight: 600; color: #333;">Genre :</label>
                    <select class="form-control" id="gender" name="gender" required
                            style="font-size: 1.1rem; padding: 15px;">
                        <option value="Male">Homme</option>
                        <option value="Female">Femme</option>
                    </select>
                </div>

                <!-- Taille -->
                <div class="mb-4">
                    <label for="height" class="form-label" style="font-weight: 600; color: #333;">Taille (cm) :</label>
                    <input type="number" step="0.1" class="form-control" id="height" name="height" required
                           style="font-size: 1.1rem; padding: 15px;" />
                </div>

                <!-- Photo de profil -->
                <div class="mb-4">
                    <label for="profileImage" class="form-label" style="font-weight: 600; color: #333;">Photo de profil :</label>
                    <input type="file" class="form-control" id="profileImage" name="profileImage" accept="image/*" required
                           style="font-size: 1.1rem; padding: 15px;" />
                </div>

                <button type="submit" class="btn btn-primary w-100" style="font-size: 1.2rem; padding: 18px 25px; background-color: #00DFC0; border-color: #00DFC0; transition: background-color 0.3s ease;">
                    Enregistrer
                </button>
            </form>
        </div>
    </div>
</div>
