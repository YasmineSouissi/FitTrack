@model List<Exercice>
<style>
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 8px;
        overflow: hidden;
    }

    .card-title {
        font-weight: bold;
        color: #4379F2;
    }

    .card-text {
        font-size: 0.9rem;
        color: #555;
    }

</style>
<div class="row">
    @foreach (var exercice in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img class="card-img-top" src="@exercice.ImgUrl" alt="@exercice.Categorie" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@exercice.Categorie</h5>
                    <p class="card-text">
                        <strong>Matériel :</strong> @exercice.Materiel<br />
                        <strong>Difficulté :</strong> @exercice.Difficulte<br />
                        <strong>Répétitions :</strong> @exercice.Repetition<br />
                        <strong>Séries :</strong> @exercice.Sets
                    </p>
                </div>
            </div>
        </div>
    }
</div>
