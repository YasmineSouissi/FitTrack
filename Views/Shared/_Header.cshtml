<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img id="img_profile" src="~/images/icone1.png" alt="Logo" style="height: 30px; margin-right: 10px;" />
                <span class="fw-bold" style="color: #117554;">MyFitnessApp</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Members/Index">Members</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/HomeMember/Articles">Articles</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/Exercices/Index">Exercices</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Barre utilisateur -->
    <div class="user-bar d-flex align-items-center bg-light py-2 px-4" style="box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
        <div class="user-profile d-flex align-items-center me-auto">
            <a href="/Profile/Index">
                @if (!string.IsNullOrEmpty(Model.ProfileImage))
                {
                    <img id="img_profile" src="@Model.ProfileImage" alt="Profile Image" style="height: 30px; margin-right: 10px;" />
                }
                else
                {
                    <img id="img_profile" src="~/images/profil.jpg" alt="Default Logo" style="height: 30px; margin-right: 10px;" />
                }
            </a>
            <div>
                <h6 class="mb-0" style="color: #333; font-weight: 600;">@Model.Username</h6>
                <p class="mb-0" style="font-size: 0.9rem; color: #666;">@Model.Email</p>
            </div>
        </div>

        <!-- Bouton Log Out avec icône -->
        <a href="/Login/Login"  >
            <!-- Icône de déconnexion (rouge) -->
            <img id="logout" src="~/images/log-out.png" style="height: 35px; margin-right: 10px;" />
        </a>
    </div>
</header>
