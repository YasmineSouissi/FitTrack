@model Projet.Models.NewPageModel

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Articles</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">


</head>
<body>
    <header>
        @Html.Partial("_Header", Model.User) <!-- Passez l'utilisateur actuel comme modèle -->
    </header>


    <main>
        @{
            ViewData["Title"] = "Détails";
        }


        <div class="container mt-5">
            <div class="card shadow-sm" style="border-radius: 15px;">
                <div class="card-body">
                    <h1 class="card-title text-center" style="color: #00DFC0;">@Model.Article.Title</h1>
                    <p class="text-muted text-center">Écrit par : <strong>@Model.Article.Author</strong></p>
                    <img src="@Model.Article.ImageUrl" class="img-fluid my-4 d-block mx-auto" alt="@Model.Article.Title" style="max-height: 400px; object-fit: cover;">
                    <p class="lead">@Model.Article.Content</p>

                    <!-- Boutons -->
                    <div class="d-flex justify-content-center mt-4">
                        <a class="btn-primary" href="@Url.Action("Index", "Articles")">Retour</a>

                    </div>
                </div>
            </div>
        </div>
        <div style="height: 80px"></div>
    </main>


    <footer class="py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>MyFitnessApp</h5>
                    <p>Obtenez les outils pour perdre du poids avec succès - et le maintenir.</p>
                </div>
                <div class="col-md-4">
                    <h5>Liens rapides</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">À propos de nous</a></li>
                        <li><a href="#">Politique de confidentialité</a></li>
                        <li><a href="#">Support</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Contactez-nous</h5>
                    <p>Email : info@myfitnessapp.com</p>
                    <p>Téléphone : +000 000 000 000</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
